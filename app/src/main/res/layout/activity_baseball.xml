<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="@string/txtkey" />

        <TextView
            android:id="@+id/txtGuess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="" />

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/drawBall"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:layout_below="@+id/linearLayout"
         />

    <TextView
        android:id="@+id/txtBall"
        android:layout_width="wrap_content"
        android:layout_height="200px"
        android:layout_below="@+id/linearLayout"
        android:layout_marginLeft="45px"
        android:layout_marginTop="20px"
        android:text="Ball(s)" />


    <TextView
        android:id="@+id/txtStrike"
        android:layout_width="wrap_content"
        android:layout_height="200px"
        android:layout_marginLeft="45px"
        android:layout_below="@+id/txtBall"
        android:text="Strike(s)" />

    <TableLayout
        android:id="@+id/tblButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drawBall">

        <TableRow>

            <Button
                android:id="@+id/btn0"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="0" />

            <Button
                android:id="@+id/btn1"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="2" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn3"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="3" />

            <Button
                android:id="@+id/btn4"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="5" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn6"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="6" />

            <Button
                android:id="@+id/btn7"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="8" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn9"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="9" />

            <Button
                android:id="@+id/btnNew"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="@string/btnnew" />

            <Button
                android:id="@+id/btnclear"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="@string/btnclear" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tblButton"
        android:text="@string/btnhint" />
</RelativeLayout>
